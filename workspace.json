{
	"Name": "websysd",
	"Environment": {
		"WORKSPACE": "websysd"
	},
	"Columns": {
		"Disk usage": { "DiskUsage": [ "$PATH" ] }
	},
	"Tasks": [
		{
			"Name": "sleep",
			"Command": "sleep 60",
			"Environment": {},
			"Service": true,
			"Metadata": {
				"PATH": "/etc"
			}
		},
		{
			"Name": "echo",
			"Command": "echo \"This is a test: $PORT\"",
			"Executor": ["/bin/sh", "-c"],
			"Environment": {
				"PORT": "9911"
			},
			"Stdout": "/tmp/$TASK-$RUN.out",
			"Stderr": "/tmp/$TASK-$RUN.err",
			"Metadata": {
				"PATH": "/bin"
			}
		},
		{
			"Name": "env",
			"Command": "env",
			"Executor": ["/bin/sh", "-c"],
			"Stdout": "/tmp/$TASK-$RUN.out",
			"Stderr": "/tmp/$TASK-$RUN.err",
			"Metadata": {
				"PATH": "/tmp"
			}
		}
	]
}
